{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Config",
    "type": "object",
    "properties": {
        "tab_width": {
            "$ref": "#/$defs/TabWidth",
            "default": 2
        },
        "balance_comments": {
            "description": "if true, comments { ... } can contain balanced brackets, like {{}}.\nif not, a comment {{}} ends at the first closing bracket.",
            "type": "boolean",
            "default": false
        },
        "string_escape_sequences": {
            "description": "if true, string literals that contain escape sequences are unescaped.\nif false, escape sequences are kept as is.",
            "type": "boolean",
            "default": false
        },
        "type_safety": {
            "$ref": "#/$defs/TypeSafety",
            "default": "None"
        },
        "write_command_comments": {
            "description": "if true, the assembly file will contain the original source code as comments.",
            "type": "boolean",
            "default": false
        },
        "stdout_buffer_size": {
            "description": "stdout buffer size in bytes",
            "$ref": "#/$defs/StdoutBufferSize",
            "default": 8192
        },
        "stack_size": {
            "description": "stack size in bytes",
            "$ref": "#/$defs/StackSize",
            "default": 65536
        }
    },
    "$defs": {
        "TabWidth": {
            "type": "integer",
            "format": "uint",
            "minimum": 0
        },
        "TypeSafety": {
            "oneOf": [
                {
                    "description": "No type safety checks are performed.",
                    "type": "string",
                    "const": "None"
                },
                {
                    "description": "When trying to execute a lambda, make sure that the popped value is a lambda.",
                    "type": "string",
                    "const": "Lambda"
                },
                {
                    "description": "Include all checks from [TypeSafety::Lambda], and make sure that when storing or loading\na variable, the popped value is a variable name.",
                    "type": "string",
                    "const": "LambdaAndVar"
                },
                {
                    "description": "Include all checks from [TypeSafety::LambdaAndVar], and ensure that only integers can be\nused for arithmetic operations.",
                    "type": "string",
                    "const": "Full"
                }
            ]
        },
        "StdoutBufferSize": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0
        },
        "StackSize": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0
        }
    }
}
